<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisStore.RegisterStore3"
    android:orientation="vertical"
    android:background="#F7C600">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="บัญชีธนาคาร"
        android:fontFamily="@font/mitr_regular"
        android:textColor="#181818"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/mitr_regular"
        android:textSize="12dp"
        android:text="โปรดกรอกข้อมูลตามขั้นตอนต่อไปนี้"
        android:textColor="#181818"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="45dp">

        <EditText
            android:id="@+id/accountNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:hint="หมายเลขบัญชี"
            android:inputType="text"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <EditText
            android:id="@+id/bankName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/accountNumber"
            android:hint="บัญชีธนาคาร"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <EditText
            android:id="@+id/typeBank"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/bankName"
            android:hint="ประเภทเงินฝาก"
            android:layout_marginTop="15dp"
            android:inputType="numberSigned"
            android:textSize="14dp"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <TextView
            android:id="@+id/title2"
            android:layout_below="@id/typeBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ภาพถ่ายบัญชีธนาคาร"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#181818"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:fontFamily="@font/mitr_regular"
            android:textSize="12dp"
            android:text="โปรดกรอกข้อมูลตามขั้นตอนต่อไปนี้"
            android:textColor="#181818"/>

        <ImageView
            android:id="@+id/bankImg"
            android:layout_below="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round_sb"/>
        <Button
            android:id="@+id/btnbankImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:text="เพิ่มรูปภาพ"
            android:textColor="#181818"
            android:fontFamily="@font/mitr_regular"
            android:background="#F7C600"/>




        <Button
            android:id="@+id/btnNext3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="590dp"
            android:text="ต่อไป"
            android:fontFamily="@font/mitr_regular"
            android:textSize="14dp"
            android:background="@drawable/button_round_b"
            />



    </RelativeLayout>

</RelativeLayout>