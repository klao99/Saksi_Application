<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisStore.RegisStore2"
    android:orientation="vertical"
    android:background="#F7C600">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="บัตรประจำตัวประชาชน"
        android:fontFamily="@font/mitr_regular"
        android:textColor="#181818"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/mitr_regular"
        android:textSize="12dp"
        android:text="ลักษณะของบัตรประจำตัวประชาชน"
        android:textColor="#181818"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="45dp">
        <ImageView
            android:id="@+id/idCardImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/button_round_sb"/>
        <Button
            android:id="@+id/btnidCardImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="เพิ่มรูปภาพ"
            android:textColor="#181818"
            android:fontFamily="@font/mitr_regular"
            android:background="#F7C600"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idCardImg"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mitr_regular"
            android:textSize="11dp"
            android:text="เพื่อป้องกันการผิดพลาดโปรดกรอกเลขบัตรประจำตัวประชาชน"
            android:textColor="#181818"/>

        <EditText
            android:id="@+id/edtIdcard"
            android:layout_below="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:hint="บัตรประจำตัวประชาชน"
            android:inputType="text"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>


        <Button
            android:id="@+id/btnNext2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="590dp"
            android:text="ต่อไป"
            android:fontFamily="@font/mitr_regular"
            android:textSize="14dp"
            android:background="@drawable/button_round_b" />

        <TextView
            android:id="@+id/title2"
            android:layout_below="@+id/edtIdcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="รูปถ่ายหน้าผู้ใช้งาน"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#181818"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:fontFamily="@font/mitr_regular"
            android:textSize="12dp"
            android:text="ลักษณะของรูปถ่าย"
            android:textColor="#181818"/>
        <ImageView
            android:id="@+id/userImg"
            android:layout_below="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round_sb"/>
        <Button
            android:id="@+id/btnUserImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:text="เพิ่มรูปภาพ"
            android:textColor="#181818"
            android:fontFamily="@font/mitr_regular"
            android:background="#F7C600"/>
    </RelativeLayout>

</RelativeLayout>