<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F7C600">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="ข้อมูลส่วนตัว"
        android:fontFamily="@font/mitr_regular"
        android:textColor="#181818"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/mitr_regular"
        android:textSize="12dp"
        android:text="โปรดกรอกข้อมูลตามขั้นตอนต่อไปนี้"
        android:textColor="#181818"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="45dp">

        <EditText
            android:id="@+id/Rname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:hint="ชื่อจริง"
            android:inputType="text"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <EditText
            android:id="@+id/Lname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/Rname"
            android:hint="นามสกุล"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <EditText
            android:id="@+id/Bdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/Lname"
            android:hint="วันเกิด"
            android:layout_marginTop="15dp"
            android:inputType="numberSigned"
            android:textSize="14dp"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/Bdate"
            android:hint="อีเมล"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <EditText
            android:id="@+id/phoneNum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="เบอร์โทรศัพท์"
            android:textColorHint="#8F8686"
            android:textColor="#8F8686"
            android:layout_marginTop="450dp"
            android:inputType="numberSigned"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round_b"/>

        <Button
            android:id="@+id/btnNext1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="590dp"
            android:text="ต่อไป"
            android:fontFamily="@font/mitr_regular"
            android:textSize="14dp"
            android:background="@drawable/button_round_b"
           />



    </RelativeLayout>

    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="35dp"
        android:text="กรอกหมายเลขโทรศัพท์"
        android:fontFamily="@font/mitr_regular"
        android:textColor="#181818"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt2"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/mitr_regular"
        android:textSize="12dp"
        android:text="กรอกหมายเลขโทรศัพท์เพื่อใช้รับเลข OTP"
        android:textColor="#181818"/>


    




</RelativeLayout>