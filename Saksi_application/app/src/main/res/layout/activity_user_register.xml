<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F242A"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/new_logo_white"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="สมัครสมาชิก"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="45dp"
        android:fontFamily="@font/mitr_regular">

        <EditText
            android:id="@+id/registerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/mitr_regular"
            android:hint="ชื่อผู้ใช้"
            android:inputType="text"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/registerName"
            android:hint="อีเมล"
            android:fontFamily="@font/mitr_regular"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round"/>

        <EditText
            android:id="@+id/password"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mitr_regular"
            android:hint="รหัส"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round"/>
        <EditText
            android:id="@+id/registerLastName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/password"
            android:hint="เบอร์โทร"
            android:fontFamily="@font/mitr_regular"
            android:layout_marginTop="15dp"
            android:inputType="numberSigned"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_below="@id/registerLastName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#F9A826"
            android:text="กลับหน้า Log in"
            android:textSize="14dp" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_below="@id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_round_y"
            android:fontFamily="@font/mitr_regular"
            android:text="สมัครสมาชิก"
            android:textSize="14dp" />

    </RelativeLayout>


