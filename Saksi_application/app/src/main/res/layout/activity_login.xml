<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181818"
    tools:context=".login.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/new_logo_white"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="เข้าสู่ระบบ"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="45dp"
        android:fontFamily="@font/mitr_regular">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/mitr_regular"
            android:hint="อีเมล"
            android:inputType="text"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round"/>
        <EditText
            android:id="@+id/passcode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/email"
            android:hint="รหัสผ่าน"
            android:fontFamily="@font/mitr_regular"
            android:layout_marginTop="15dp"
            android:inputType="numberSigned"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_round"/>
        <TextView
            android:id="@+id/txtRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passcode"
            android:layout_marginLeft="133dp"
            android:text="ยังไม่มีบัญชีใช่หรือไม่"
            android:textColor="#fff"
            android:textSize="10dp"
            android:fontFamily="@font/mitr_regular"
            android:layout_marginTop="17dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_below="@+id/passcode"
            android:background="#181818"
            android:text="สมัครสมาชิกกัน"
            android:textColor="#F7C600"
            android:textSize="10dp"
            android:fontFamily="@font/mitr_regular"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/button_round_y"
            android:fontFamily="@font/mitr_regular"
            android:text="เข้าสู่ระบบ"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="25dp"
            android:text="หรือ"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnRegisStore"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/mitr_regular"
            android:text="เข้าร่วมเป็นสตูดิโอ หรือ ช่างสัก"
            android:textSize="14dp"
            android:textColor="#F7C600" />

    </RelativeLayout>



</RelativeLayout>