<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".Store.StoreProfileActivity2">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgPro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profil_inception"
        />

    <TextView
        android:id="@+id/textNameProfile"
        android:layout_toRightOf="@+id/imgPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="ชื่อAdmin"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ออกจากระบบ"/>

</RelativeLayout>