<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgPro"
        android:layout_below="@+id/imgtattooholder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profil_inception"
        />

    <ImageView
        android:id="@+id/imgtattooholder"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>



    <TextView
        android:id="@+id/storeNameholder"
        android:layout_toRightOf="@+id/imgPro"
        android:layout_below="@+id/imgtattooholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="INCEPTION"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/ttDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รายละเอียด"
        android:textSize="15dp"
        android:layout_below="@+id/imgPro"
        android:textColor="#000"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/detailholder"
        android:layout_below="@+id/ttDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="12dp"
        android:text="Detail"
        android:layout_marginLeft="15dp"/>

<!--    <TextView-->
<!--        android:id="@+id/typetatholder"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="#000"-->
<!--        android:textSize="12dp"-->
<!--        android:text="Type tattoo" />-->



    <Button
        android:id="@+id/btnCancle"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:text="ยกเลิก"
        android:background="@drawable/button_round_g"
        android:textColor="#000" />

    <Button
        android:id="@+id/btnTest"
        android:layout_toRightOf="@+id/btnCancle"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:text="ทดลอง"
        android:background="@drawable/button_round_b"
        android:textColor="#fff" />


</RelativeLayout>